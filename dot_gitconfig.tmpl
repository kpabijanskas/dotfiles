[push]
    autoSetupRemote = true

[user]
    name = Karolis Pabijanskas
    email = {{ (rbw "personal_email" "--folder" "Chezmoi").data.username}}

{{ if eq .chezmoi.os "linux" }}
[includeIf "gitdir:~/repos/{{ (rbwFields "work" "--folder" "Chezmoi").git_domain.value }}/"]
    path = ~/.gitconfig-work

[includeIf "gitdir:~/workspaces/"]
    path = ~/.gitconfig-work

[url "git@{{ (rbwFields "work" "--folder" "Chezmoi").git_domain.value }}:"]
    insteadOf = "https://{{ (rbwFields "work" "--folder" "Chezmoi").git_domain.value }}/"
{{- end }}

[url "https://{{ (rbwFields "gitea" "--folder" "Machines on Mac Mini").user.value }}:{{ (rbwFields "gitea" "--folder" "Machines on Mac Mini").token.value }}@{{ (index (rbw "gitea" "--folder" "Machines on Mac Mini").data.uris 0).uri}}/"]
    insteadOf = "https://{{ (index (rbw "gitea" "--folder" "Machines on Mac Mini").data.uris 0).uri}}/"
    insteadOf = "git@{{ (index (rbw "gitea" "--folder" "Machines on Mac Mini").data.uris 0).uri}}:"

[pull]
    rebase = true
